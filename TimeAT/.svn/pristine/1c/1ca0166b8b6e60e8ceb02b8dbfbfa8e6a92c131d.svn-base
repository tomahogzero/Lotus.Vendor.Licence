    Private Sub LoadRateOT()
        Dim Da As New SqlDataAdapter
        Dim Ds As New DataSet
        Dim strSQL As String
        strSQL = "Select Multiply from OT Order By Multiply"
        Da = New SqlDataAdapter(strSQL, Conn)
        Da.Fill(Ds, "data")
        With Ds.Tables("Data")
            cboRate.Items.Clear()
            Dim I As Integer
            For I = 0 To .Rows.Count - 1
                cboRate.Items.Add(.Rows(I).Item("Multiply"))
            Next
            Ds.Clear()
        End With

    End Sub

