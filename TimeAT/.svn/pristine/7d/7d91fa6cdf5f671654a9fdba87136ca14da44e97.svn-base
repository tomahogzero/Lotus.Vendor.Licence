            If .SelectedItems.Count = 0 Then Exit Sub
            Dim Code As String = .SelectedItems(0).SubItems(1).Text.Trim
            txtCode.Text = Code.Trim
            txtCode_LostFocus(Me, System.EventArgs.Empty)
        End With
    End Sub

