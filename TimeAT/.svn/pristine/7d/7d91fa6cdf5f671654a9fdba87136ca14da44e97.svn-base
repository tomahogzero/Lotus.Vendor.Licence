    Function dataIsExist(ByVal MnST As Integer, ByVal MnSP As Integer) As Boolean
        Dim da As New SqlDataAdapter
        Dim ds As New DataSet
        Dim strSQL As String

        strSQL = "Select MnST " & _
                " From TimeLateRateCash " & _
                " Where (" & MnST & " Between MnST and MnSP) Or " & _
                    " (" & MnSP & " Between MnST and MnSP) "
        da = New SqlDataAdapter(strSQL, Conn)
        da.Fill(ds, "data")

        With ds.Tables("data")
            If .Rows.Count = 0 Then
                Return False
            Else
                Return True
            End If
        End With
    End Function

    Function dataIsExist(ByVal MnST As Integer, ByVal MnSP As Integer, ByVal Code As String) As Boolean
        Dim da As New SqlDataAdapter
        Dim ds As New DataSet
        Dim strSQL As String

        strSQL = "Select MnST " & _
                " From TimeLateRateCash " & _
                " Where Code <> '" & Code.Trim & "' and ((" & MnST & " Between MnST and MnSP) Or " & _
                    " (" & MnSP & " Between MnST and MnSP)) "
        da = New SqlDataAdapter(strSQL, Conn)
        da.Fill(ds, "data")

        With ds.Tables("data")
            If .Rows.Count = 0 Then
                Return False
            Else
                Return True
            End If
        End With
    End Function
